<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="RoadToJob2019@gmail.com" id="CREATE_INGREDIENTS_TABLE">
        <createTable tableName="ingredients">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)"/>
            <column name="amount" type="DOUBLE"/>
            <column name="unit" type="VARCHAR(255)"/>
        </createTable>
    </changeSet>

    <changeSet author="RoadToJob2019@gmail.com" id="ADD_INGREDIENTS_TABLE_1">
        <insert tableName="ingredients">
            <column name="name" value="Water"/>
            <column name="amount" value="300"/>
            <column name="unit" value="Litre"/>
        </insert>
    </changeSet>

    <changeSet author="RoadToJob2019@gmail.com" id="ADD_INGREDIENTS_TABLE_2">
        <insert tableName="ingredients">
            <column name="name" value="Alcohol"/>
            <column name="amount" value="100"/>
            <column name="unit" value="Litre"/>
        </insert>
    </changeSet>

</databaseChangeLog>